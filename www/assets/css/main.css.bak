/* V4 Theme: Organic Starlight */
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');

:root {
    --bg-deep: #020617;
    /* High contrast dark blue */
    --glass-surface: rgba(255, 255, 255, 0.08);
    /* Higher opacity for contrast */
    --glass-border: rgba(255, 255, 255, 0.12);
    --glass-highlight: rgba(255, 255, 255, 0.18);

    --accent-glow: #38bdf8;
    /* Brighter Cyan */
    --accent-gold: #fbbf24;
    --accent-danger: #f87171;
    --accent-good: #4ade80;

    --gauge-track: rgba(255, 255, 255, 0.15);
    --gauge-val: #38bdf8;
    /* Default gauge color (Cyan) */

    --text-primary: #ffffff;
    --text-secondary: #cbd5e1;

    --font-display: 'Inter', sans-serif;
    --font-tech: 'Inter', sans-serif;

    --ease-out: cubic-bezier(0.2, 0.8, 0.2, 1);
}

* {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}

body {
    background-color: var(--bg-deep);
    color: var(--text-primary);
    font-family: var(--font-tech);
    height: 100vh;
    overflow: hidden;
    position: relative;
    scrollbar-width: none;
    /* Firefox */
}

body::-webkit-scrollbar {
    display: none;
}

/* Noise Texture Overlay */
body::after {
    content: "";
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: url('data:image/svg+xml;base64,');
    pointer-events: none;
    z-index: 9999;
    opacity: 0.4;
}

a {
    text-decoration: none;
    color: inherit;
    transition: color 0.3s var(--ease-out);
}

/* Layout */
.app-shell {
    display: flex;
    height: 100vh;
    width: 100vw;
    position: relative;
    z-index: 1;
    /* Under noise */
}

/* Sidebar - Fixed Dock Style (Industrial) */
.sidebar-dock {
    width: 260px !important;
    min-width: 260px !important;
    margin: 1rem;
    background: rgba(11, 17, 32, 0.95);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 0;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    padding: 2rem 1.5rem;
    gap: 2rem;
    flex-shrink: 0;
    transition: none !important;
}

.sidebar-dock:hover {
    width: 260px !important;
    background: rgba(11, 17, 32, 0.95);
    border-color: rgba(255, 255, 255, 0.15);
}

.brand-mark {
    font-size: 1.8rem;
    color: var(--text-primary);
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    gap: 0.8rem;
    white-space: nowrap;
    overflow: hidden;
    padding-left: 0;
}

.brand-mark span {
    font-family: var(--font-display);
    font-weight: 700;
    font-size: 1.5rem;
    opacity: 1;
    transition: none;
    text-transform: uppercase;
    letter-spacing: 2px;
}

.sidebar-dock:hover .brand-mark span {
    opacity: 1;
}

.dock-nav {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    width: 100%;
}

.dock-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    color: var(--text-secondary);
    font-size: 1.1rem;
    padding: 0.8rem 1rem;
    border-radius: 0;
    border-left: 2px solid transparent;
    white-space: nowrap;
    overflow: hidden;
    transition: background 0.2s, color 0.2s;
    width: 100%;
}

.dock-item span {
    font-size: 0.9rem;
    font-weight: 600;
    opacity: 1;
    transition: none;
    text-transform: uppercase;
    letter-spacing: 1px;
}

.sidebar-dock:hover .dock-item span {
    opacity: 1;
}

.dock-item:hover,
.dock-item.active {
    color: var(--text-primary);
    background: rgba(255, 255, 255, 0.03);
    border-left-color: var(--text-primary);
    box-shadow: none;
}

.dock-footer {
    width: 100%;
    padding-right: 0;
}

/* Main Canvas */
.main-canvas {
    flex: 1;
    overflow-y: auto;
    padding: 2rem;
    max-width: 1600px;
    margin: 0 auto;
    scrollbar-width: none;
}

.main-canvas::-webkit-scrollbar {
    display: none;
}

/* Hero Section - The Orb */
.hero-orb-section {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 3rem;
    padding: 0 2rem;
}

.hero-text h1 {
    font-family: var(--font-display);
    font-size: 3.5rem;
    font-weight: 300;
    line-height: 1.1;
    margin-bottom: 0.5rem;
    background: linear-gradient(to right, #fff, #a0c4ff);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
}

.hero-text p {
    font-size: 1.2rem;
    color: var(--text-secondary);
    font-weight: 300;
}

.orb-container {
    position: relative;
    width: 200px;
    height: 200px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.celestial-orb {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    background: radial-gradient(circle at 30% 30%, rgba(255, 255, 255, 0.9), rgba(160, 196, 255, 0.4) 40%, rgba(160, 196, 255, 0.1) 70%);
    box-shadow: 0 0 60px rgba(160, 196, 255, 0.3), inset 0 0 20px rgba(255, 255, 255, 0.5);
    animation: breathe 6s ease-in-out infinite;
    position: relative;
    z-index: 2;
}

.orb-ring {
    position: absolute;
    width: 180px;
    height: 180px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    animation: spin 20s linear infinite;
}

.orb-ring::before {
    content: '';
    position: absolute;
    top: -2px;
    left: 50%;
    width: 4px;
    height: 4px;
    background: #fff;
    border-radius: 50%;
    box-shadow: 0 0 10px #fff;
}

.orb-transparency {
    position: absolute;
    font-family: var(--font-display);
    font-size: 3rem;
    font-weight: 700;
    color: #fff;
    z-index: 3;
    text-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
}

@keyframes breathe {

    0%,
    100% {
        transform: scale(1);
        box-shadow: 0 0 60px rgba(160, 196, 255, 0.3);
    }

    50% {
        transform: scale(1.05);
        box-shadow: 0 0 80px rgba(160, 196, 255, 0.5);
    }
}

@keyframes spin {
    100% {
        transform: rotate(360deg);
    }
}

/* Masonry Grid */
.glass-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
}

.glass-card {
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 0;
    padding: 2rem;
    backdrop-filter: blur(12px);
    transition: border-color 0.2s;
    position: relative;
}

.glass-card::before {
    /* Corner trim visual */
    content: '';
    position: absolute;
    top: -1px;
    left: -1px;
    width: 10px;
    height: 10px;
    border-top: 2px solid rgba(255, 255, 255, 0.3);
    border-left: 2px solid rgba(255, 255, 255, 0.3);
}

.glass-card:hover {
    transform: none;
    box-shadow: none;
    border-color: rgba(255, 255, 255, 0.4);
}

.span-2 {
    grid-column: span 2;
}

.span-3 {
    grid-column: span 3;
}

.card-head {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
    border-bottom: 1px solid var(--glass-border);
    padding-bottom: 1rem;
}

.card-head h3 {
    font-family: var(--font-display);
    font-weight: 600;
    font-size: 1.1rem;
    color: var(--text-primary);
    letter-spacing: 0.5px;
}

.btn-text {
    font-size: 0.9rem;
    color: var(--text-secondary);
    cursor: pointer;
}

.btn-text:hover {
    color: var(--text-primary);
}

/* Editorial Table */
.data-table {
    width: 100%;
    border-spacing: 0;
}

.data-table th {
    text-align: left;
    color: var(--text-secondary);
    font-weight: 400;
    font-size: 0.85rem;
    padding-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 1px;
}

.data-table td {
    padding: 1rem 0;
    border-bottom: 1px solid var(--glass-border);
    font-size: 1.1rem;
    color: var(--text-primary);
}

.data-table tr:last-child td {
    border: none;
}

.highlight-pill {
    display: inline-block;
    padding: 4px 10px;
    border-radius: 0;
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
}

/* Feature Cards */
.target-preview {
    display: flex;
    align-items: center;
    gap: 1.5rem;
}

.target-icon {
    width: 60px;
    height: 60px;
    background: #000;
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-primary);
    font-size: 1.5rem;
    box-shadow: none;
}

/* Red Mode V2 */
body.red-mode {
    --accent-glow: #ff2a2a;
    --accent-gold: #ff4d4d;
    --text-primary: #ffb3b3;
    --text-secondary: #802020;
    --glass-surface: rgba(50, 0, 0, 0.2);
    --glass-border: rgba(255, 0, 0, 0.15);
}

body.red-mode .celestial-orb {
    background: radial-gradient(circle at 30% 30%, rgba(255, 100, 100, 0.9), rgba(150, 0, 0, 0.4) 40%, #200 70%);
    box-shadow: 0 0 60px rgba(255, 0, 0, 0.3);
}

body.red-mode .hero-text h1 {
    background: linear-gradient(to right, #ff9999, #ff0000);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
}

body.red-mode .dock-item:hover,
body.red-mode .dock-item.active {
    background: rgba(255, 0, 0, 0.1);
    color: #ff5555;
    box-shadow: 0 0 20px rgba(255, 0, 0, 0.1);
}

/* Mobile */
.bottom-nav {
    display: none;
}

@media (max-width: 900px) {
    .app-shell {
        flex-direction: column;
        height: auto;
        min-height: 100vh;
    }

    .sidebar-dock {
        display: none;
    }

    .bottom-nav {
        display: flex;
        position: fixed;
        bottom: 0;
        left: 0;
        width: 100%;
        background: rgba(5, 5, 8, 0.95);
        backdrop-filter: blur(20px);
        border-top: 1px solid var(--glass-border);
        justify-content: space-around;
        padding: 1rem 0;
        z-index: 100;
        padding-bottom: max(1rem, env(safe-area-inset-bottom));
    }

    .b-item {
        color: var(--text-secondary);
        font-size: 1.4rem;
    }

    .b-item.active {
        color: var(--text-primary);
        text-shadow: 0 0 10px var(--accent-glow);
    }

    .glass-grid {
        grid-template-columns: 1fr;
    }

    .span-2,
    .span-3 {
        grid-column: span 1;
    }

    .hero-orb-section {
        flex-direction: column;
        text-align: center;
        gap: 2rem;
    }

    .hero-text h1 {
        font-size: 2.5rem;
    }
}

/* --- V4.5 Hero Card Improvements --- */
.hero-card {
    grid-column: span 3;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 2.5rem;
    background: rgba(11, 17, 32, 0.6);
    border: 1px solid rgba(255, 255, 255, 0.15);
}

.hero-label-top {
    font-size: 1rem;
    letter-spacing: 3px;
    text-transform: uppercase;
    color: var(--text-secondary);
    margin-bottom: 2rem;
}

.hero-gauge-lg {
    width: 180px;
    height: 180px;
    position: relative;
    margin-bottom: 2rem;
}

.hero-gauge-val {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-family: var(--font-display);
    font-size: 5rem;
    font-weight: 700;
    color: #fff;
    text-shadow: 0 0 30px rgba(255, 255, 255, 0.3);
}

.hero-desc-text {
    font-size: 1.2rem;
    color: var(--accent-good);
    font-weight: 500;
}

/* --- V4.5 Table & Event Rows --- */
.event-row td {
    background: rgba(255, 255, 255, 0.05);
    padding: 0.5rem 1rem;
    font-weight: 600;
    color: var(--text-secondary);
    text-transform: uppercase;
    letter-spacing: 1px;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.event-row.gold td {
    color: var(--accent-gold);
    border-color: rgba(255, 214, 10, 0.2);
}

.event-row.blue td {
    color: var(--accent-glow);
    border-color: rgba(0, 242, 255, 0.2);
}

/* --- Language Selector --- */
.lang-select-container {
    padding: 0 1rem;
    margin-top: auto;
    /* Push to bottom near footer */
    width: 100%;
}

.lang-select {
    width: 100%;
    background: rgba(0, 0, 0, 0.3);
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: var(--text-secondary);
    padding: 0.5rem;
    font-family: var(--font-tech);
    font-size: 0.9rem;
    border-radius: 0;
    cursor: pointer;
    text-transform: uppercase;
}

.lang-select:hover {
    border-color: var(--text-primary);
    color: var(--text-primary);
}

/* --- Themed Gauge --- */
.circular-chart .circle-bg {
    stroke: var(--gauge-track);
}

.circular-chart .circle {
    stroke: var(--gauge-val);
    transition: stroke 0.3s;
}

/* --- Red Mode Updates --- */
body.red-mode {
    --bg-deep: #050000;
    --gauge-track: rgba(255, 0, 0, 0.1);
    --gauge-val: #ff0000;
    --accent-good: #ff0000;
    /* Force Green to Red in Red Mode */
}

/* Ensure good accent texts (like "Excellent") turn red */
body.red-mode .hero-desc-text {
    color: #ff4d4d;
}


/* --- Modal Styles --- */
.modal {
    display: none;
    /* Hidden by default */
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.7);
    backdrop-filter: blur(5px);
    align-items: center;
    justify-content: center;
}

.modal-content {
    background: rgba(11, 17, 32, 0.95);
    border: 1px solid rgba(255, 255, 255, 0.15);
    padding: 2rem;
    width: 300px;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    box-shadow: 0 20px 50px rgba(0, 0, 0, 0.5);
}

.modal h3 {
    font-family: var(--font-display);
    color: var(--text-primary);
    margin: 0;
}

.input-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

.input-group label {
    font-size: 0.8rem;
    color: var(--text-secondary);
    text-transform: uppercase;
    letter-spacing: 1px;
}

.modal-input {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    padding: 0.8rem;
    color: #fff;
    font-family: var(--font-tech);
    font-size: 1rem;
    outline: none;
}

.modal-input:focus {
    border-color: var(--accent-glow);
}

.modal-actions {
    display: flex;
    justify-content: flex-end;
    gap: 1rem;
}

.btn-modal {
    padding: 0.6rem 1.2rem;
    cursor: pointer;
    text-transform: uppercase;
    font-weight: 600;
    font-size: 0.9rem;
    border: 1px solid transparent;
    transition: all 0.2s;
}

.btn-cancel {
    background: transparent;
    color: var(--text-secondary);
}

.btn-cancel:hover {
    color: #fff;
}

.btn-save {
    background: rgba(56, 189, 248, 0.1);
    border: 1px solid rgba(56, 189, 248, 0.3);
    color: var(--accent-glow);
}

.btn-save:hover {
    background: rgba(56, 189, 248, 0.2);
    box-shadow: 0 0 15px rgba(56, 189, 248, 0.2);
}

/* --- Sidebar Location Refinement --- */
.dock-location {
    width: 100%;
    margin-top: auto;
    margin-bottom: 1rem;
    padding: 1rem;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid var(--glass-border);
    border-radius: 4px;
    /* Slight rounding for cohesion, or 0 for industrial */
}

.loc-label {
    font-size: 0.7rem;
    color: var(--text-secondary);
    text-transform: uppercase;
    letter-spacing: 1.5px;
    margin-bottom: 0.5rem;
    font-weight: 600;
}

.loc-data {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.loc-info {
    display: flex;
    flex-direction: column;
    gap: 0.1rem;
}

.loc-name {
    font-weight: 600;
    color: var(--text-primary);
    font-size: 0.95rem;
}

.loc-coords {
    font-family: var(--font-tech);
    font-size: 0.8rem;
    color: var(--accent-glow);
    opacity: 0.8;
}

.action-icon {
    color: var(--text-secondary);
    cursor: pointer;
    transition: color 0.2s, transform 0.2s;
    font-size: 0.9rem;
    padding: 0.5rem;
}

.action-icon:hover {
    color: var(--accent-glow);
    transform: scale(1.1);
}